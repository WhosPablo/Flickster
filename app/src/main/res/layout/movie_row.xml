<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/movie_row_root"
    android:padding="@dimen/row_vertical_margin"
    android:paddingTop="@dimen/row_vertical_margin"
    >

    <ImageView
        android:paddingTop="@dimen/img_vertical_margin"
        android:paddingBottom="@dimen/img_vertical_margin"
        android:paddingRight="@dimen/row_item_horizontal_margin"
        android:paddingEnd="@dimen/row_item_horizontal_margin"
        android:paddingLeft="@dimen/row_item_horizontal_margin"
        android:paddingStart="@dimen/row_item_horizontal_margin"
        android:layout_weight="4"
        android:layout_gravity="center"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        tools:src="@mipmap/ic_launcher"
        android:id="@+id/movie_poster_iv"
        android:contentDescription="@string/movieposter"
        android:scaleType="fitCenter" />

    <LinearLayout
        android:paddingRight="@dimen/row_item_horizontal_margin"
        android:paddingEnd="@dimen/row_item_horizontal_margin"
        android:paddingLeft="@dimen/row_item_horizontal_margin"
        android:paddingStart="@dimen/row_item_horizontal_margin"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="6">
        <TextView
            android:text="Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/movie_title_tv"
            android:textStyle="normal|bold"
            android:textSize="16sp" />

        <TextView
            android:text="Overview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/movie_overview_tv" />
    </LinearLayout>

</LinearLayout>